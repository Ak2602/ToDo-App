<%- include("header")-%>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="/style.css">
    <title>Login Page</title>
</head>

<body>
    <% if (messages.success) { %>
        <p class="alert" style="background-color: green; font-size: larger;"><%- messages.success %></p>
        <% } %>
          <% if (messages.warn) { %>
            <p class="alert" style="background-color: red; font-size: larger;"><%- messages.warn %></p>
            <% } %>
    <section class="login">
        <form action="user" method="post">
        <div class="container">
                <h1>Login Form</h1>
                <input type="text" name="user" placeholder="Username" required>
                <input type="password" name="pass" placeholder="Password" required>
                
                <input type="submit" value="LOGIN" id="loginBtn" class="hover_btn">Login</button>
          
            <div class="sgnUp">
                <p id="member">Not A Member?</p>
                <a href="/register" id="sgn_now">SignUp Now</a>
            </div>
        </div>
    </form>
    </section>
</body>

</html>